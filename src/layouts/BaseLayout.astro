---
import TechnologyCard from "../components/TechnologyCard.astro";

const { title } = Astro.props;

const technologies = [
  { name: "Astro", iconSrc: "/AlbertoAndrade10.github.io/images/AstroImage.png" },
  { name: "Tailwind", iconSrc: "/AlbertoAndrade10.github.io/images/tailwindImage.png" },
];
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <!-- Fuente de Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      /* Animación de entrada para el contenido principal */
      .fade-in {
        animation: fadeIn 0.2s ease-in-out;
      }
      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
    </style>
  </head>
  <body
    class="font-poppins bg-gradient-to-br from-indigo-50 via-purple-100 to-indigo-200 min-h-screen flex flex-col"
  >
    <!-- Header -->
    <header
      class="bg-white text-gray-900 p-6 rounded-b-[3rem] shadow-lg flex justify-center items-center border-b border-gray-200 sticky top-0 z-50"
    >
      <nav class="space-x-8 flex">
        <a
          href="/AlbertoAndrade10.github.io/"
          class="text-gray-700 hover:text-indigo-600 transition duration-300 font-semibold relative group"
        >
          Inicio
          <span
            class="absolute bottom-0 left-0 w-0 h-[2px] bg-indigo-600 transition-all duration-300 group-hover:w-full"
          ></span>
        </a>
        <a
          href="/AlbertoAndrade10.github.io/about-me/"
          class="text-gray-700 hover:text-indigo-600 transition duration-300 font-semibold relative group"
        >
          Sobre mí
          <span
            class="absolute bottom-0 left-0 w-0 h-[2px] bg-indigo-600 transition-all duration-300 group-hover:w-full"
          ></span>
        </a>
        <a
          href="/AlbertoAndrade10.github.io/projects/"
          class="text-gray-700 hover:text-indigo-600 transition duration-300 font-semibold relative group"
        >
          Proyectos
          <span
            class="absolute bottom-0 left-0 w-0 h-[2px] bg-indigo-600 transition-all duration-300 group-hover:w-full"
          ></span>
        </a>
        <a
          href="/AlbertoAndrade10.github.io/contact/"
          class="text-gray-700 hover:text-indigo-600 transition duration-300 font-semibold relative group"
        >
          Contacto
          <span
            class="absolute bottom-0 left-0 w-0 h-[2px] bg-indigo-600 transition-all duration-300 group-hover:w-full"
          ></span>
        </a>
      </nav>
    </header>

    <!-- Main -->
    <main
      class="container mx-auto py-12 px-8 bg-white rounded-[3rem] shadow-2xl mt-8 mb-8 fade-in"
    >
      <slot />
    </main>

    <!-- Footer -->
    <footer
      class="bg-white text-gray-900 p-6 rounded-t-[3rem] shadow-lg border-t border-gray-200 mt-auto text-center"
    >
      <div class="flex flex-col items-center space-y-4">
        <p class="text-sm text-gray-600">Esta web está desarrollada con:</p>
        <div class="flex flex-wrap justify-center gap-4">
          {
            technologies.map((tech) => (
              <TechnologyCard name={tech.name} iconSrc={tech.iconSrc} />
            ))
          }
        </div>
        <p class="text-sm text-gray-600">2025 Alberto Andrade Ortiz</p>
      </div>
    </footer>
  </body>
</html>
